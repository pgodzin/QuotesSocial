<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/fbName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/fbName"
            android:layout_alignParentLeft="true"
            android:contentDescription="openQuote"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/openQuote"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="QuoteText"
            android:id="@+id/itemText"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="- Author"
            android:id="@+id/itemAuther"
            android:layout_below="@+id/imageView"
            android:layout_toRightOf="@+id/fbName"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/itemAuther"
            android:layout_centerHorizontal="true"
            android:src="@drawable/closeQuote"/>
</RelativeLayout>